<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Notes.DialogFullScreen">
        <item name="android:windowIsFloating">false</item>
    </style>


    <style name="MaterialAlertDialog.App.Title.Text"
        parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textSize">20sp</item>
        <!--        <item name="android:textColor">@color/red</item>-->
    </style>

    <style name="MaterialAlertDialog.App.Body.Text"
        parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>


    <style name="Widget.App.NegativeButton"
        parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="Widget.App.DeleteButton"
        parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">17sp</item>
    </style>

</resources>